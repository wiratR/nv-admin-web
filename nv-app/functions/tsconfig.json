    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/payment/paymentConfig.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
